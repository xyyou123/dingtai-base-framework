<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:padding="@dimen/dp_4"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/action_bar_edittext"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        android:padding="@dimen/dp_8"
        android:gravity="left|top"
        android:hint="评论"
        android:textColor="@color/textcolor_Body1"
        android:textSize="@dimen/textsize_Body2"
        android:background="@drawable/bg_comment_edit" />

    <com.lnr.android.base.framework.ui.control.view.NumImageView
        android:id="@+id/actionbar_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_toolbar_comment" />

    <com.lnr.android.base.framework.ui.control.view.NumImageView
        android:id="@+id/actionbar_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/bg_action_like" />

    <com.lnr.android.base.framework.ui.control.view.NumImageView
        android:id="@+id/actionbar_favored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/bg_action_favor" />

</LinearLayout>