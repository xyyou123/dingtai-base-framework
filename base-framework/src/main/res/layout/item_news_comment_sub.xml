<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_4"
    android:background="#e1e1e1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_sub_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_8"
            android:contentDescription="@null"
            android:src="@drawable/icon_default_user" />

        <TextView
            android:id="@+id/item_sub_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_sub_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="用户名"
            android:textColor="@color/textcolor_Body3"
            android:textSize="@dimen/textsize_Body1" />


        <TextView
            android:id="@+id/item_sub_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_sub_name"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_toRightOf="@+id/item_sub_icon"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="2013-12-04 14:43"
            android:textColor="@color/textcolor_Caption"
            android:textSize="@dimen/textsize_Caption" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/item_name"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_sub_zan_image"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:scaleType="centerInside"
                android:src="@drawable/bg_action_like" />

            <TextView
                android:id="@+id/item_sub_zan_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="0"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:textColor="#797979"
                android:textSize="@dimen/textsize_Body1" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_sub_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_48"
        android:text="评论内容"
        android:textColor="@color/textcolor_Body3"
        android:textSize="@dimen/textsize_Subhead2" />
</LinearLayout>