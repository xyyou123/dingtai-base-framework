<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/toolbar_left_layout"
        android:layout_width="@dimen/dp_80"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/dp_8"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toolbar_left_img"
            android:layout_width="@dimen/dp_32"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_8"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/toolbar_left_img_single"
            android:layout_width="@dimen/dp_36"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_12"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/toolbar_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/black_17"
            android:textSize="@dimen/textsize_Subhead2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/toolbar_title_layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:gravity="center"
            android:textColor="@color/toolbar_title"
            android:textSize="@dimen/textsize_Title2"/>

        <TextView
            android:id="@+id/toolbar_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/textsize_Title2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/toolbar_right_layout"
        android:layout_width="@dimen/dp_80"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toolbar_right_img"
            android:layout_width="@dimen/dp_32"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_8"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/toolbar_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/textcolor_theme"
            android:textSize="@dimen/textsize_Subhead2"/>

    </LinearLayout>

</merge>