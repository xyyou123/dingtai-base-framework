<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/backgroundDark_2"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/more_action_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor_Body1"
        android:textSize="@dimen/textsize_Caption2"
        android:padding="@dimen/dp_12"
        android:gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/more_action_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:scrollbars="none"
        android:overScrollMode="never"/>

    <View
        style="@style/line"
        android:background="#C1C1C1"
        android:layout_marginRight="@dimen/dp_12"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/more_action_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:scrollbars="none"
        android:overScrollMode="never"/>

    <TextView
        android:id="@+id/more_action_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor_Body2"
        android:background="@color/backgroundDark"
        android:textSize="@dimen/textsize_Subhead2"
        android:padding="@dimen/dp_12"
        android:text="取消"
        android:gravity="center"/>

</LinearLayout>