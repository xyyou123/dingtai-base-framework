<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:id="@id/root_layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <com.dingtai.android.library.video.control.FlutteringLayout
            android:id="@+id/FlutteringLayout"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/btn_zan"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/btn_zan"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_above="@+id/btn_redpacket"
            android:src="@drawable/icon_live_chat_addzan"/>

        <ImageView
            android:id="@+id/btn_redpacket"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/icon_live_chat_redpacket"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:gravity="center"
        android:background="@color/background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="说点什么..."
            android:textColor="@color/textcolor_Body3"
            android:textSize="@dimen/textsize_Subhead2"
            android:padding="@dimen/dp_6"/>

    </LinearLayout>

</LinearLayout>