<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="YX_Toolbar">
        <attr name="YX_Toolbar_height" format="dimension"/> <!-- 高度 -->
        <attr name="YX_Toolbar_left_image" format="reference"/> <!-- 左边的图标 -->
        <attr name="YX_Toolbar_right_image" format="reference"/> <!-- 右边的图标 -->
        <attr name="YX_Toolbar_center_title_text" format="string"/> <!-- 中间的文字 -->
        <attr name="YX_Toolbar_center_title_text_color" format="color"/> <!-- 中间文字的颜色 -->
        <attr name="YX_Toolbar_center_title_text_size" format="dimension"/> <!-- 中间文字的大小 -->
    </declare-styleable>

    <declare-styleable name="SwipeMenuLayout">
        <attr name="leftMenuView" format="reference" />
        <attr name="rightMenuView" format="reference" />
        <attr name="contentView" format="reference" />
        <attr name="canRightSwipe" format="boolean" />
        <attr name="canLeftSwipe" format="boolean" />
        <attr name="fraction" format="float" />
    </declare-styleable>

    <declare-styleable name="UltraViewPager">
        <attr name="upv_autoscroll" format="integer" />
        <attr name="upv_infiniteloop" format="boolean" />
        <attr name="upv_ratio" format="float" />
        <attr name="upv_scrollmode" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="upv_disablescroll" format="enum">
            <enum name="none" value="0" />
            <enum name="backward" value="1" />
            <enum name="forward" value="2" />
        </attr>
        <attr name="upv_multiscreen" format="float" />
        <attr name="upv_automeasure" format="boolean" />
        <attr name="upv_itemratio" format="float" />
        <attr name="upv_margin" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PublishView">
        <attr name="icon_left" format="reference" />
        <attr name="icon_center" format="reference" />
        <attr name="icon_right" format="reference" />
        <attr name="icon_close" format="reference" />
        <attr name="text_left" format="string" />
        <attr name="text_center" format="string" />
        <attr name="text_right" format="string" />
    </declare-styleable>

    <declare-styleable name="RingProgressBar">
        <attr name="ringColor" format="color" />
        <attr name="ringProgressColor" format="color" />
        <attr name="ringWidth" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer" />
        <attr name="textIsShow" format="boolean" />
        <attr name="progress" format="integer" />
        <attr name="ringPadding" format="dimension" />
        <attr name="style">
            <enum name="STROKE" value="0" />
            <enum name="FILL" value="1" />
        </attr>
    </declare-styleable>
</resources>